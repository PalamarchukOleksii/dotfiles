general {
        colors = true
        interval = 5
}

order += "wireless _first_"
order += "battery all"
order += "memory"
order += "volume master"
order += "tztime local"

wireless _first_ {
        format_up = "%quality %essid"
        format_down = "DOWN"
}

battery all {
        format = "%status %percentage"
}

memory {
        format = "%used"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "%A %d %H:%M:%S"
}

volume master {
    format = "%volume"
    format_muted = "muted (%volume)"
}
