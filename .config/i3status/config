general {
        colors = true
        interval = 5
}

order += "battery all"
order += "memory"
order += "volume master"
order += "tztime local"

battery all {
        format = "%status %percentage"
}

memory {
        format = "%used"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "%A %d %H:%M:%S"
}

volume master {
    format = "%volume"
    format_muted = "MUTED (%volume)"
}
